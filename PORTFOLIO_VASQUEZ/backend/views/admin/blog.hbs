<div class="container">
    

    {{!-- fila de titulo y agregar noticia --}}
    <div class="row fila2">
        <div class="col-7">
            <h3>Todos las entradas del BLOG</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-secondary" href="/admin/blog/agregar"><i class="far fa-arrow-alt-circle-right" ></i> Crear Nueva</a>
            
        </div>
    </div>

    {{!-- Fin de segunda fila --}}

    {{!-- listar novedades y boton de editar --}}
        <div class="row fila3">
            <div class=" col-md-1"></div>
            <div class=" col-md-10">
                <ol class="list-group list-group-numbered">
                    {{#each novedades}}
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="col-7 ms-2 me-auto">
                        <div class="fw-bold"> {{titulo}}</div>
                        
                        {{subtitulo}}
                        </div>
                        <div class=" col-3 fw-bold imagenblog"> {{{imagen}}}</div>
                        {{!--<div class="fw-bold">{{cuerpo}}</div> --}}
                        <div class="col-2 fw-bold">
                            <a href="/admin/blog/editar/{{id}}"><span class="badge bg-secondary rounded-pill"><i class="fas fa-pencil-alt"></i></span></a>
                            <a href="/admin/blog/eliminar/{{id}}"><span class="badge bg-secondary rounded-pill"><i class="fas fa-trash-alt"></i></span></a> 
                        </div>
                                              
                        
                    </li>
                    {{/each}}                   
                </ol>
            </div>
            <div class=" col-md-1"></div>            
        </div>
    {{!-- fin de tercer fila --}}
</div>